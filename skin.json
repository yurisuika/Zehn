{
  "Conditions": {
    "Display Announcements Button": {
      "description": "Toggles the Announcements button on the navbar.",
      "default": "Hide",
      "values": {
        "Hide": {
          "TargetCss": {
            "affects": [".*"],
            "src": "css/config/navbar/announcements.css"
          }
        },
        "Show": {}
      }
    }
  },
  "Configuration": [
    {
      "Name": "Display Announcements Button",
      "ToolTip": "Toggles the Announcements button on the navbar.",
      "Type": "Checkbox",
      "Value": false
    }
  ],
  "Patches": [
    {
      "MatchRegexString": ".*",
      "Statement": [
        {
          "If": "Display Announcements Button",
          "Equals": false,
          "False": {
            "src": "/css/config/navbar/announcements.css"
          },
          "True": {}
        }
      ]
    },
    {
      "MatchRegexString": ".*SP Overlay:.*",
      "TargetCss": "libraryroot.custom.css",
      "TargetJs": "libraryroot.custom.js"
    },
    {
      "MatchRegexString": ".*Supernav$",
      "TargetCss": "libraryroot.custom.css",
      "TargetJs": "libraryroot.custom.js"
    },
    {
      "MatchRegexString": ".*Menu$",
      "TargetCss": "libraryroot.custom.css",
      "TargetJs": "libraryroot.custom.js"
    },
    {
      "MatchRegexString": ".*notificationtoasts_.*",
      "TargetCss": "notifications.custom.css",
      "TargetJs": "notifications.custom.js"
    },
    {
      "MatchRegexString": "Sign in to Steam",
      "TargetCss": "libraryroot.custom.css",
      "TargetJs": "libraryroot.custom.js"
    }
  ],
  "UseDefaultPatches": true,
  "Steam-WebKit": "webkit.css",
  "name": "Zehn",
  "author": "yurisuika",
  "description": "A Steam skin based on Windows 10's Metro/Fluent transitional design language.",
  "source": "https://github.com/yurisuika/Zehn",
  "github": {
    "owner": "yurisuika",
    "repo_name": "Zehn"
  },
  "version": "2024.10.22",
  "tags": [
    "Minimal",
    "Dark",
    "Metro",
    "Fluent",
    "Windows 10",
    "MDL2"
  ],
  "header_image": "https://raw.githubusercontent.com/yurisuika/Zehn/master/assets/header.png?raw=true",
  "splash_image": "https://raw.githubusercontent.com/yurisuika/Zehn/master/assets/splash.png?raw=true"
}